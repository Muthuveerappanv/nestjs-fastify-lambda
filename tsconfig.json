{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2019",
    "lib": ["ES2019"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "./",
    "incremental": true
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
